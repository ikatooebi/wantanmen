<%= form_for @book, :html => {:multipart => true} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <%= f.label :author %>
  <%= f.text_field :author %><br />
  <%= f.label :isbn %>
  <%= f.text_field :isbn %><br />
  <%= f.label :"pdf" %>
  <%= f.file_field :pdf %><br />
  <%= f.submit %>
<% end %>
